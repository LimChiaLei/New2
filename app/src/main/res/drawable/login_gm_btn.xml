<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shape with black outline -->
    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="10dp" />
            <stroke
                android:color="@color/black"
                android:width="2dp" />
        </shape>
    </item>

    <!-- Icon -->
    <item
        android:drawable="@drawable/icon_gmail"
        android:gravity="center"
        android:width="24dp"
        android:height="24dp"
        android:bottom="8dp"
        android:end="250dp"
        android:start="8dp"
        android:top="8dp" />

</layer-list>

